{
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "copyright-to-timestamps",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/copyright-to-timestamps.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "docs/copyright.txt"
            ]
        },
        {
            "name": "timestamp-offsetter",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/timestamp-offsetter.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "docs/timestamps.txt",
                "+10"
            ]
        }
    ]
}